    <Spinner
        android:id="@+id/Dekorasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:entries="@array/Dekorasi"
        android:textSize="10sp"
        app:layout_constraintTop_toTopOf="@+id/et_id"/>


    <TextView
        android:id="@+id/hrg_dekorasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:ems="10"
        android:text="Harga :"
        app:layout_constraintTop_toTopOf="@id/Dekorasi"/>

    <TextView
        android:id="@+id/pilih_dekorasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="55dp"
        android:layout_marginBottom="4dp"
        android:ems="10"
        android:text=""
        app:layout_constraintTop_toTopOf="@id/Dekorasi"
        app:layout_constraintStart_toStartOf="@id/hrg_dekorasi" />


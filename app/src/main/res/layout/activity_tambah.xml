    <Spinner
        android:id="@+id/Makeup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:entries="@array/Makeup"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@+id/hrg_dekorasi" />

    <TextView
        android:id="@+id/hrg_makeup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="4dp"
        android:ems="10"
        android:text="Harga :"
        app:layout_constraintTop_toTopOf="@id/Makeup"/>


    <TextView
        android:id="@+id/pilih_makeup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="55dp"
        android:layout_marginBottom="4dp"
        android:ems="10"
        app:layout_constraintTop_toTopOf="@+id/Makeup"
        app:layout_constraintStart_toStartOf="@id/hrg_makeup"/>


    <Spinner
        android:id="@+id/souvenir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:entries="@array/Souvenir"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@+id/pes_undangan" />

    <TextView
        android:id="@+id/hrg_souvenir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="4dp"
        android:ems="10"
        android:text="Harga :"
        app:layout_constraintTop_toTopOf="@id/souvenir"/>


    <TextView
        android:id="@+id/pilih_souvenir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:ems="10"
        android:text=""
        app:layout_constraintTop_toTopOf="@id/hrg_souvenir"
        app:layout_constraintStart_toStartOf="@+id/hrg_souvenir"/>

    <TextView
        android:id="@+id/jml_souvenir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:text="Jumlah Souvenir"
        app:layout_constraintTop_toTopOf="@+id/hrg_souvenir"/>

    <EditText
        android:id="@+id/jml_souvenir1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="7dp"
        android:ems="10"
        android:background="@drawable/edittext"
        android:inputType="number"
        app:layout_constraintTop_toTopOf="@+id/jml_souvenir"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Tanggal Pernikahan"
        android:id="@+id/tanggal"
        app:layout_constraintTop_toTopOf="@+id/jml_souvenir1"/>


    <EditText
        android:id="@+id/tv_dateresult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext"
        android:hint="dd/MM/yyyy"
        android:text=""
        android:padding="7dp"
        app:layout_constraintTop_toTopOf="@id/tanggal"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Alamat"
        android:id="@+id/alamat"
        app:layout_constraintTop_toTopOf="@+id/tv_dateresult"/>

    <EditText
        android:id="@+id/et_domisili"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/edittext"
        android:ems="10"
        android:padding="7dp"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@+id/alamat"/>

    <TextView
        android:id="@+id/total_hrg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:backgroundTint="@android:color/black"
        android:ems="10"
        android:textSize="16sp"
        android:text="Total Harga :"
        app:layout_constraintTop_toTopOf="@id/et_domisili" />

    <TextView
        android:id="@+id/total_harga"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="45dp"
        android:ems="10"
        android:text="0"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/et_domisili"
        app:layout_constraintStart_toStartOf="@+id/total_hrg"/>

    <RadioGroup
        android:id="@+id/rg_jenispembayaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="@id/total_harga"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tv_jenispembayaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pembayaran : "
            android:textSize="16sp"/>

        <RadioButton
            android:id="@+id/rb_transfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#FFB6C1"
            android:text="Transfer"/>

        <RadioButton
            android:id="@+id/rb_cod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#FFB6C1"
            android:text="COD" />
    </RadioGroup>



